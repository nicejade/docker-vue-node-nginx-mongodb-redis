    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "cheerio": "^1.0.0-rc.2",
    "cross-env": "^5.0.5",
    "crypto": "0.0.3",
    "debug": "^2.2.0",
    "ejs": "^2.4.1",
    "formidable": "^1.1.1",
    "fs-extra": "^3.0.1",
    "jsonwebtoken": "^7.4.1",
    "kcors": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.1.0",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.3.0",
    "koa-mount": "^3.0.0",
    "koa-onerror": "^3.0.1",
    "koa-passport": "^3.0.0",
    "koa-redis": "^3.1.1",
