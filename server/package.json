    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.7.1",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^6.0.3",
    "crypto": "1.0.1",
    "debug": "^4.1.1",
    "ejs": "^2.7.4",
    "formidable": "^1.1.1",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^5.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-onerror": "^4.1.0",
    "koa-passport": "4.1.3",
