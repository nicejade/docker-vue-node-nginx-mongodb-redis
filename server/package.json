{
  "name": "server",
  "version": "0.0.1",
  "author": "nicejade",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "production": "node bin/production.js",
    "debug": "npm run clean && node bin/debug",
    "clean": "rm -rf app/",
    "build": "npm test && npm run clean && npm run compile",
    "compile": "babel src/ --out-dir app/ --retain-lines --source-maps",
    "test": "mocha -u bdd --compilers js:babel-core/register",
    "server": "npm run clean && npm run compile && npm run production",
    "deploy": "npm run clean && npm run compile && cross-env NODE_ENV=production pm2 restart bin/production.js --name 'awesome-webapp'"
  },
  "engines": {
    "node": ">= 4"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.7.7",
